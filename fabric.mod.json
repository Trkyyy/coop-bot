{
  "schemaVersion": 1,
  "id": "coop-bot",
  "version": "${version}",

  "name": "Coop Bot",
  "description": "A basic integration between the Coop minecraft server and it's #Crafters discord channel",
  "authors": ["Trko"],
  "contact": {
    "homepage": "https://github.com/Trkyyy/coop-bot",
    "sources": "https://github.com/Trkyyy/coop-bot"
  },

  "license": "MIT",

  "environment": "server",
  "entrypoints": {
    "main": ["com.coop.bot"],
    "server": ["com.coop.bot"]
